{
  "name": "science.mozilla.org",
  "version": "1.0.0",
  "description": "Mozilla Science",
  "author": "Mozilla",
  "license": "MPL",
  "scripts": {
    "start": "npm run build && npm-run-all --parallel server watch:**",
    "build": "webpack && npm run post-build",
    "post-build": "cp -r node_modules/mozmaker/dest/css dist/",
    "server": "live-server ./dist --port=1818",
    "watch:js": "chokidar 'app/js/**/*' -c 'npm run build'",
    "watch:html": "chokidar 'app/index.html' -c 'npm run build'",
    "test": "npm-run-all test:**",
    "test:js": "eslint --config ./.eslintrc.yaml app/js/**/* webpack.config.js"
  },
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "chokidar": "^1.4.3",
    "chokidar-cli": "^1.2.0",
    "eslint": "^2.6.0",
    "eslint-plugin-react": "^4.2.3",
    "file-loader": "^0.8.5",
    "live-server": "^0.9.2",
    "mofo-style": "^2.4.0",
    "npm-run-all": "^1.7.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "mozmaker": "0.5.0",
    "react": "0.14.8",
    "react-dom": "0.14.8",
    "react-router": "2.0.1"
  }
}
