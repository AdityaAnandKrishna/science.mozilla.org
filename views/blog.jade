include partials/head.jade
include partials/header.jade
include partials/footer.jade
include partials/post.jade
include partials/connect.jade

-var page = "Blog"

doctype html5
html
  head
    +head(page)
  body
    +header(loggedIn, page)
    div.page-wrapper
      if(!author)
        div.splash
          h1 Blog
          p News, updates and blog posts here

      div
        div.pure-u-1.pure-u-md-3-4
          if(!author)
            div.header-img(style="margin-right:1em")
          else
            div.post
              h1 Author Archives:&nbsp;
               b #{author}
          div(id="blog")
            - for(var i=0; i<posts.length; i++){
                +post(posts[i], true)
            - }

        if(!author)
          div.pure-u-1.pure-u-md-1-4
            div.l-box-lg.header-img
              +connect()


    +footer()

