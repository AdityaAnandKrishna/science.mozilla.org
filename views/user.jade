include partials/head.jade
include partials/header.jade
include partials/footer.jade

-var page = "User"

doctype html5
html
  head
    +head(page)
  body
    +header(loggedIn, page)
    div.page-wrapper
      section.project
        div
          h1 #{user.name}
          p
            i= user.company


          div.pure-u-1.pure-u-md-1-4.sidebar
            div
              div.crop
                img(src= user.avatar_url)
          div.pure-u-1.pure-u-md-3-4
            p
              a(href='//github.com/' + user.github_id)
                i.fa.fa-github
                span= user.github_id
          div.pure-u-1
            h3 EVENTS
            h3 PROJECT LEAD

            if(posts.length > 0)
              h3 ARTICLES BY #{user.name.toUpperCase()}
                ul
                - for(var i=0; i<posts.length; i++){
                  -var post = posts[i];
                    li
                      a(href="/" + post.slug)!=post.title
                - }


    +footer()