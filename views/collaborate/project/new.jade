include ../../partials/head.jade
include ../../partials/header.jade
include ../../partials/footer.jade

doctype html5
html
  head
    +head()
  body
    +header(loggedIn)
    div.page-wrapper

      section.project
        div
          h1
            input(placeholder="title", id='ptitle')
          p
            input(placeholder="scientific discipline", id='psubjects')

          div.pure-u-1.pure-u-md-1-4.sidebar
            div
              div#preview.crop
                img(src="/img/logo.png")

              input#pimage_url(type="hidden" name="pimage_url" value="/img/logo.png")
              input#files(type="file")
              p#status Please select a file

          div.pure-u-md-3-4
            div.pure-u-1.pure-u-lg-1-3
                i.fa.fa-user
                label= user.name
            div.pure-u-1.pure-u-lg-1-3
                i.fa.fa-map-marker
                input(placeholder= "institution", id='pinstitute')
            div.pure-u-1.pure-u-lg-1-3
              if(inactive == 'true')
                input(type="checkbox" id="pactive")
              else
                input(type="checkbox" id="pactive" checked)
              label  Active Project
            div.pure-u-1
              p
                small= 'Tags: '
                  input#planguages
                br
                small= 'Looking for: '
                  input#pwanted
            div.pure-u-1
              p.summary
                textarea(id='pshort_description' placeholder="Short description")
              h3 WHAT WE'RE DOING
              p.summary
                textarea(id='pdescription' placeholder="Description")


            div.project-links
              span.pure-button.projectLink Website:
                input(placeholder="link to project", id='pproject_url')
              span.pure-button.projectLink Go to the Repo:
                input(placeholder="GitHub url", id='prepo')



          div.pure-u-1.pure-u-md-1-4

              h3 MORE INFORMATION
              ul.infolink(id='plinks')
                li
                  input(placeholder='new entry title')
                  br
                  span Link:
                  input(placeholder='new entry link')
          div.pure-u-1.pure-u-md-3-4
            div.pure-u-1
              h3 MAIN DELIVERABLES
                li
                  input(placeholder='new deliverable')

            div.project-links
              span.pure-button.btn-success(id='save-project', data-href='/projects/new') Submit Project



        div
          br
          br
          i
            | Have a question? Read more
            a(href="/projects/about")  about this program
            |  or
            a(href='mailto:sciencelab@mozillafoundation.org')  get in touch
            | .
    script(type="text/javascript" src="/scripts/s3upload.js")
    +footer()

