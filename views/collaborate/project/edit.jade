include ../../partials/head.jade
include ../../partials/header.jade
include ../../partials/footer.jade

doctype html5
html
  head
    +head()
  body
    +header(loggedIn)
    div.page-wrapper

      section.project
        div
          h1
            input(value= project.title, id='ptitle')
          p
            input(value= project.subjects.join(', '), id='psubjects')

          div.pure-u-1.pure-u-md-1-4.sidebar
            div
              div.crop
                img(src= project.image_url)
          div.pure-u-md-3-4
            div.pure-u-1.pure-u-lg-1-3
                i.fa.fa-user
                input(value= lead.join(', '), id='plead')
            div.pure-u-1.pure-u-lg-1-3
                i.fa.fa-map-marker
                input(value= project.institute, id='pinstitute')
            div.pure-u-1.pure-u-lg-1-3
              if(inactive == 'true')
                input(type="checkbox" id="pactive")
              else
                input(type="checkbox" id="pactive" checked)
              label  Active Project
            div.pure-u-1
              p
                small= 'Tags: '
                  input(value=project.languages.join(', '), id='planguages')
                br
                small= 'Looking for: '
                  input(value=project.wanted.join(', '), id='pwanted')
            div.pure-u-1
              p.summary
                textarea(id='ptweetable')= project.short_description
              //h3 WHO WE ARE
              //p.summary
                textarea(id='pwho')= who
              h3 WHAT WE'RE DOING
              p.summary
                textarea(id='pwhat')= project.description


            div.project-links
              span.pure-button.projectLink Website:
                input(value=project.project_url, id='ppage')
              span.pure-button.projectLink Go to the Repo:
                input(value='https://github.com/' + project.github.user + '/' + project.github.repo, id='prepo')



          div.pure-u-1.pure-u-md-1-4

              h3 MORE INFORMATION
              ul.infolink(id='pmoreinfo')
                if(project.moreInfo)
                  each info in project.moreInfo
                    li
                      input(value=info.title)
                      br
                      span Link:
                      input(value=info.link)
                li
                  input(placeholder='new entry')
                  br
                  span Link:
                  input(placeholder='new link')
          div.pure-u-1.pure-u-md-3-4
            div.pure-u-1
              h3 MAIN DELIVERABLES
              ul.goals(id='pgoals')
                if(project.goals)
                  each goal in project.goals
                    li
                      input(value=goal)
                li
                  input(placeholder='new deliverable')

            div.project-links
              span.pure-button.btn-success(id='save-project', data-href='/projects/' + project.slug + '/save') Save Changes
              a.pure-button(href='/projects/' + project.slug) View Project



        div
          br
          br
          i
            | Have a question? Read more
            a(href="/projects/about")  about this program
            |  or
            a(href='mailto:sciencelab@mozillafoundation.org')  get in touch
            | .
    +footer()
