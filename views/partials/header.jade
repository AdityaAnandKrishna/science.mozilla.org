mixin header(loggedIn, page)
  header



    div.menu-wrapper
      div.pure-menu.pure-menu-open.pure-menu-horizontal
        a(href="https://www.mozilla.org/" id="tabzilla") mozilla
        link(href="//mozorg.cdn.mozilla.net/media/css/tabzilla-min.css" rel="stylesheet")
        script(async src="//mozorg.cdn.mozilla.net/tabzilla/tabzilla.js")

        a(id="menu-button").fa.fa-bars.pull-left
        a(href='/' id="logo").pull-left
          img(src='/img/logo.png').MSLlogo
        if(page != 'Create Account')
          ul.pull-right
            if(loggedIn)
              li
                a(href='/u/' + user.username)='Welcome ' + user.name
              li
                a(href='/logout') Logout
            else
              li
                a(data-toggle="modal" data-target="#joinUsModal").pure-button JOIN US
              li
                a(href='/auth/github')
                  i.fa.fa-github
                  span  Sign In
        ul.pull-left
          li(class=page === 'About' ? "pure-menu-selected" : "")
              a(href='/about') About
          li(class=page === 'Blog' ? "pure-menu-selected" : "")
            a(href='/blog') Blog
          li(class=page === 'Training' ? "pure-menu-selected" : "")
            a(href='/training') Training
          li(class=page === 'Community' ? "pure-menu-selected" : "")
            a(href='/community') Community
          li(class=page === 'Collaborate' ? "pure-menu-selected" : "")
            a(href='/collaborate') Collaborate
        if(!loggedIn)
          div.modal.fade#joinUsModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
            div.modal-dialog
              div.modal-content
                div.modal-header
                  button.close(type="button" data-dismiss="modal" aria-label="Close")
                    span(aria-hidden="true") &times;
                  h3.modal-title#modalLabel Join Us
                div.modal-body
                  p Join a global network of researchers, tool developers, librarians and publishers as we collaborate to further science on the web. We believe a community of peers that work, learn and build together can make research thrive on the open web.
                  div.pure-u-1
                    div.pure-u-1-3
                      h4 BUILDING
                      div.circle-img#circle-exp
                    div.pure-u-1-3
                      h4 TRAINING
                      div.circle-img#circle-innovate
                    div.pure-u-1-3
                      h4 EMPOWERING
                      div.circle-img#circle-collab
                div.modal-footer
                  a.pure-button.pure-button-lg(type="button" href='/auth/github')
                    i.fa.fa-github
                    |  Sign Up via GitHub

